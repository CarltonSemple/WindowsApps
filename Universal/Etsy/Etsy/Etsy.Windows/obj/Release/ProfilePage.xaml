<Page
    x:Name="pageRoot"
    x:Class="Etsy.ProfilePage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Etsy"
    xmlns:common="using:Etsy.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">My Application</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="DarkSlateGray">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid Background="MintCream"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton"
                    Foreground="Red"
                    Canvas.ZIndex="2" Margin="39,0,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Center"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock Name="title" Text=""
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Foreground="SlateGray"
                       Canvas.ZIndex="2" Grid.ColumnSpan="2"
                       Style="{StaticResource HeaderTextBlockStyle}"/>
        </Grid>
        
        
        <!-- Profile Image -->
        <Ellipse Grid.Row="1" 
                 Height="200" Width="200"
                 Margin="0,0,0,0"
                 HorizontalAlignment="Center" VerticalAlignment="Center">
            <Ellipse.Fill>
                <ImageBrush ImageSource="{Binding avatarSource}" 
                            Stretch="Uniform"/>
            </Ellipse.Fill>
        </Ellipse>
        
        <!-- Log Out -->
        <Button x:ConnectionId='1' Name="logoutButton"
                Background="Black"
                Grid.Row="1"
                Height="70" Width="150"
                Margin="0,0,10,0"
                HorizontalAlignment="Right" VerticalAlignment="Center"
                                          >
            <StackPanel>
                <TextBlock Text="Log Out"
                           HorizontalAlignment="Center"
                           FontSize="22"/>
            </StackPanel>
            
        </Button>
        
        
        <!-- Profile -->
        <Grid Grid.Row="2"
              Background="#FF3F6868">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="70*"/>
            </Grid.ColumnDefinitions>
            
            <!-- real name -->
            <TextBlock Name="nameBlock"
                       Grid.Row="0" Grid.ColumnSpan="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="26"
                       Text="{Binding name}"/>
            
            <!-- username -->
            <TextBlock Name="usernameBlock"
                       Grid.Row="1" Grid.ColumnSpan="2"
                       HorizontalAlignment="Center" VerticalAlignment="Top"
                       FontSize="24" FontWeight="Bold"
                       Text="{Binding username}"/>
            
            <!-- Transaction Counts -->
            <TextBlock Name="purchasesBlock"
                       Grid.Row="2"
                       Margin="10,0,0,0"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       FontSize="22">
                <Run Text="Items Purchased: "/>
                <Run Text="{Binding itemsBought}"/>
            </TextBlock>
            
            <!-- Bio -->
            <TextBlock Name="bioBlock"
                       Grid.Row="2" Grid.Column="1"
                       Grid.RowSpan="3"
                       Margin="10,10,10,0"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="20"
                       Text="{Binding bio}"/>
                        
            
        </Grid>
        
        
    </Grid>
</Page>

