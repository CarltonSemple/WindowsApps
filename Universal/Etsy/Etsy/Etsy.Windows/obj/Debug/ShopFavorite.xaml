<UserControl
    x:Class="Etsy.ShopFavorite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Etsy"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="500"
    DataContext="{Binding}"
    >

    <Grid Name="mainGrid" Background="Transparent"
          Height="400"
          Width="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>


        <!-- De-Favorite Icon (X) -->
        <Button x:ConnectionId='1' Name="favoriteButton"
                DataContext="{Binding}"
                Canvas.ZIndex="3"
                Grid.Row="2" Grid.Column="2" Grid.RowSpan="2"
                HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Margin="5,5,5,5"
                BorderThickness="0"
                Height="60" Width="60"
                                            >
            <Grid
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Height="60" Width="60">
                <Image Name="heart_filled" 
                       DataContext="{Binding}"
                       Source="Assets/x.png"
                       Height="30"
                       Width="30"
                       Stretch="Uniform"
                       Canvas.ZIndex="1"
                       Visibility="Visible"/>
            </Grid>
        </Button>

        <!-- Shop Picture -->
        <Image Name="image"
               Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
               Stretch="UniformToFill"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            Source="{Binding shop.image_url_760x100}">
        </Image>

        <!-- Details -->
        <Grid Name="detailsGrid"
            Grid.Column="0" Grid.ColumnSpan="3"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch">
            <Grid.Background>
                <SolidColorBrush Color="MintCream" Opacity="1"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="63*"/>
                <ColumnDefinition Width="37*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Name="shopName"
                       Text="{Binding shop.shop_name}"
                       FontSize="22"
                       Foreground="Black"
                       Grid.Row="0" Grid.ColumnSpan="2"
                       Margin="5,0,0,0"
                       TextWrapping="WrapWholeWords"
                       VerticalAlignment="Center" HorizontalAlignment="Stretch"
                       />

            <TextBlock Name="shopTitle"
                       Grid.Row="1" Grid.Column="0"
                       Text="{Binding shop.title}"
                       FontSize="15"
                       Foreground="#FF894B8F"
                       Margin="5,0,0,5"
                       VerticalAlignment="Center" HorizontalAlignment="Stretch"
                       />
        </Grid>

        <StackPanel
            Background="MintCream"
            Grid.Row="2" Grid.RowSpan="2"
            Grid.ColumnSpan="2">
            <TextBlock 
                   Text="Shop Owner"
                   FontSize="15"
                   Foreground="#FF894B8F"
                   HorizontalAlignment="Center"
                   Height="auto" Margin="0,10,0,0"
                   Grid.Row="2" Grid.Column="0"/>
            <TextBlock Name="ownerNameBlock"
                       Margin="0,0,0,0"
                       Height="auto"
                       FontSize="18"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Grid.Row="3" Grid.ColumnSpan="2">
                <Run Text="{Binding Profile.first_name}"/>
                <Run Text="{Binding Profile.last_name}"/>
            </TextBlock>
        </StackPanel>
        <StackPanel 
            Background="MintCream"
            Grid.Row="2" Grid.RowSpan="2"
            Grid.Column="2"/>
    </Grid>
</UserControl>

