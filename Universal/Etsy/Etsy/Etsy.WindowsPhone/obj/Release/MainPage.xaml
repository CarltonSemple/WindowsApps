<Page x:ConnectionId='1' xmlns:UI="using:Microsoft.Advertising.Mobile.UI"  xmlns:WindowsPhone81="using:Microsoft.AdMediator.WindowsPhone81"  
    x:Class="Etsy.MainPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Etsy"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" 
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    
    xmlns:myUserControl="using:Etsy"
    
    mc:Ignorable="d"
                             >

    <Grid Background="White" Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <!--<ColumnDefinition Width="*" />-->
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto"/>
            <!--<ColumnDefinition Width="auto"/>-->
        </Grid.ColumnDefinitions>

        <!-- Progress Indicator -->
        <ProgressRing Name="pRing"
                      Grid.ColumnSpan="5" Grid.RowSpan="3"
                      HorizontalAlignment="Center" VerticalAlignment="Center"
                      Height="500" Width="500"
                      Canvas.ZIndex="7" 
                      Foreground="Red" Background="Transparent"
                      Visibility="Collapsed"/>

        <!-- Image Quality Option -->
        <StackPanel Name="quality_panel" 
                    Grid.ColumnSpan="5" Grid.RowSpan="3"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Canvas.ZIndex="8"
                    Visibility="Collapsed">
            <TextBlock Text="Is it taking too long to load?"
                       FontSize="24"
                       Foreground="Black"/>
            <Button x:ConnectionId='22' Name="imageQualityButton"
                                                    >
                <Button.Background>
                    <SolidColorBrush Color="White" Opacity="0.5"/>
                </Button.Background>
                <TextBlock Text="Try Lower Image Quality"
                           FontSize="22"
                           Foreground="Blue"/>
            </Button>
        </StackPanel>

        <!-- Load Error Notification -->
        <Rectangle Name="errorVisibilityBlocker"
                   Grid.ColumnSpan="8" Grid.RowSpan="3"
                   Canvas.ZIndex="9"
                   Fill="Red" Opacity="0.2"
                   Visibility="Collapsed"/>
        <!-- Hide the rest of the page -->
        <!-- panel for displaying the error -->
        <StackPanel Name="LoadErrorPanel"
                    Grid.ColumnSpan="8" Grid.RowSpan="3"
                    Canvas.ZIndex="10"
                    Visibility="Collapsed">
            <Image Name="smileyface"
                   Margin="0,100,0,20"
                   Width="300" Height="300"
                   Source="Assets/SadFace.png"/>
            <TextBlock Name="loadErrorBlock"
                       Foreground="Black"
                       TextAlignment="Center"
                       FontSize="22"/>
            <Button x:ConnectionId='20' Name="refreshButton"
                                               
                    Height="auto" Width="auto"
                    HorizontalAlignment="Center"
                    Background="Blue"
                    BorderBrush="White"
                    Visibility="Collapsed">
                <TextBlock Text="Retry"
                           Foreground="White"
                           FontSize="20"/>
            </Button>
            <Button x:ConnectionId='21' Name="error_goBackButton"
                                                    
                    Height="auto" Width="auto"
                    HorizontalAlignment="Center"
                    Background="Red"
                    BorderBrush="White"
                    Visibility="Collapsed">
                <TextBlock Text="Go Back"
                           Foreground="White"
                           FontSize="20"/>
            </Button>
        </StackPanel>

        <Rectangle Name="topSectionFill"
            Grid.Column="0" Grid.ColumnSpan="6"
                   Fill="LightCyan"
                   Canvas.ZIndex="0"/>

        <!-- Menu -->
        <Button x:ConnectionId='2' Name="menuButton"
                Grid.Row="0" Grid.Column="0"
                Canvas.ZIndex="5"
                HorizontalAlignment="Left" HorizontalContentAlignment="Stretch"
                VerticalAlignment="Center"
                                         
                BorderThickness="0"
                MinWidth="0" MinHeight="0"
                Background="Transparent">
            <Grid HorizontalAlignment="Stretch"
                  Margin="0,0,0,-10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Name="buttonIndicator"
                       Grid.Column="0"
                       Opacity="0.5"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Width="40"
                       Margin="0,0,-10,5" 
                       Source="Assets/ButtonIndicator_skinny.png"/>
                <TextBlock Name="pageTitle"
                       Text="{Binding currentView}" Foreground="SlateGray" FontSize="30"
                       Width="auto"
                       Margin="0,0,7,0"
                       Grid.Column="1" Grid.Row="0" 
                       TextAlignment="Left"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <!--<Border 
                    Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                    Background="Black"
                    Height="1"/>-->
            </Grid>
        </Button>

        <!-- Menu -->
        <Grid Name="menuPanel"
              Height="700"
              Margin="0,-775,0,0"
              Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2"
              Canvas.ZIndex="4"
              VerticalAlignment="Top">
            <Grid.Background>
                <SolidColorBrush Color="Red"
                                 Opacity="0.75"/>
            </Grid.Background>
            <!--<Grid.Transitions>
                <TransitionCollection>
                    <RepositionThemeTransition/>
                </TransitionCollection>
            </Grid.Transitions>-->
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- profile button -->
                <RowDefinition Height="60"/>
                <!-- Trending -->
                <RowDefinition Height="60"/>
                <!-- Browse -->
                <RowDefinition Height="60"/>
                <!-- Favorites -->
                <RowDefinition Height="60"/>
                <!-- Settings -->
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Border Grid.ColumnSpan="3"
                    Grid.Row="0" VerticalAlignment="Bottom"
                    Height="1" 
                    Background="SlateGray"/>
            <Border Grid.ColumnSpan="3"
                    Grid.Row="1" VerticalAlignment="Bottom"
                    Height="1" 
                    Background="SlateGray"/>
            <Border Grid.ColumnSpan="3"
                    Grid.Row="2" VerticalAlignment="Bottom"
                    Height="1" 
                    Background="SlateGray"/>
            <Border Grid.ColumnSpan="3"
                    Grid.Row="3" VerticalAlignment="Bottom"
                    Height="1" 
                    Background="SlateGray"/>
            <Border Grid.ColumnSpan="3"
                    Grid.Row="4" VerticalAlignment="Bottom"
                    Height="1" 
                    Background="SlateGray"/>

            <!-- avatar & profile button -->

            <Button x:ConnectionId='14' Name="profileButton2"
                    BorderThickness="0"
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                                               
                                                  >
                <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Height="70">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image  Name="avatar2"
                            Grid.Column="0"
                            Height="45" Width="45"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            Source="{Binding image_url_75x75}"/>
                    <TextBlock  Name="usernameBlock2"
                                Grid.Column="2"
                                VerticalAlignment="Center" HorizontalAlignment="Left"
                                Foreground="White"
                                Text="{Binding login_name}" FontSize="24" />
                </Grid>
            </Button>

            <!-- Trending -->
            <Button x:ConnectionId='15' Name="trendingButton"
                    BorderThickness="0"
                    Grid.Row="1"
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                                                >
                <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Height="70">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Name="trendingImage"
                           Grid.Column="0"
                           Height="55" Width="55"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock  
                                Grid.Column="2"
                                VerticalAlignment="Center" HorizontalAlignment="Left"
                                Foreground="White"
                                Text="Trending" FontSize="24" />
                </Grid>
            </Button>

            <!-- Browse -->
            <Button x:ConnectionId='16' Name="browseButton"
                    BorderThickness="0"
                    Grid.Row="2"
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                                              >
                <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Height="70">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Name="browseImage"
                           Grid.Column="0"
                           Height="55" Width="55"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock  
                                Grid.Column="2"
                                VerticalAlignment="Center" HorizontalAlignment="Left"
                                Foreground="White"
                                Text="Browse" FontSize="24" />
                </Grid>
            </Button>

            <!-- Favorites -->
            <Button x:ConnectionId='17' Name="favoritesButton"
                    BorderThickness="0"
                    Grid.Row="3"
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                                                 >
                <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Height="70">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Name="favoritesImage"
                           Grid.Column="0"
                           Height="55" Width="55"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock  
                                Grid.Column="2"
                                VerticalAlignment="Center" HorizontalAlignment="Left"
                                Foreground="White"
                                Text="Favorites" FontSize="24" />
                </Grid>
            </Button>

            <!-- Settings -->
            <Button x:ConnectionId='18' Name="settingsButton"
                    BorderThickness="0"
                    Grid.Row="4"
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                                                >
                <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Height="70">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Name="settingsImage"
                           Grid.Column="0"
                           Height="55" Width="55"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock  
                                Grid.Column="2"
                                VerticalAlignment="Center" HorizontalAlignment="Left"
                                Foreground="White"
                                Text="Settings" FontSize="24" />
                </Grid>
            </Button>
            
            <!-- About -->
            <Button x:ConnectionId='19' Name="aboutButton"
                    BorderThickness="0"
                    Grid.Row="5"
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                                             >
                <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Height="70">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Name="aboutImage"
                           Grid.Column="0"
                           Height="55" Width="55"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock  
                                Grid.Column="2"
                                VerticalAlignment="Center" HorizontalAlignment="Left"
                                Foreground="White"
                                Text="About" FontSize="24" />
                </Grid>
            </Button>

        </Grid>

        <!-- Status Block -->
        <!-- not used due to screen space -->
        <TextBlock Name="statusBlock"
                   Grid.Column="1" 
                   Grid.ColumnSpan="1"
                   Visibility="Collapsed"
                   Width="auto"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Foreground="#FF22A44C"
                   FontSize="30" FontWeight="SemiLight"
                   Text="{Binding currentView}" FontFamily="Segoe UI Semilight"/>

        <Rectangle x:ConnectionId='3' Name="visibilityBlocker" 
                   Grid.Column="0" Grid.ColumnSpan="6"
                   Grid.Row="1" Grid.RowSpan="2"
                   Canvas.ZIndex="3" Visibility="Collapsed"
                                                    
                   Fill="WhiteSmoke" Opacity="0.85"/>
        <Rectangle Name="visibilityBlocker2" 
                   Grid.Column="0" Grid.ColumnSpan="6"
                   Grid.Row="1" Grid.RowSpan="2"
                   Canvas.ZIndex="1" Visibility="Collapsed"
                   Fill="WhiteSmoke" Opacity="0.5"/>

        <Button x:ConnectionId='4' Name="searchButton"
                Margin="-0,0,0,0"
                Foreground="Black"
                Background="Transparent"
                Grid.Row="0"
                Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Center" VerticalAlignment="Center"               
                Canvas.ZIndex="3"
                                          
                                            
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                Width="65" 
                MinWidth="0" 
                BorderThickness="0">
            <Image
                Source="Assets/Buttons/SearchButton.png"
                Stretch="Uniform"
                HorizontalAlignment="Left" VerticalAlignment="Center"
                Width="45">
            </Image>
            <Button.Transitions>
                <TransitionCollection>
                    <RepositionThemeTransition/>
                </TransitionCollection>
            </Button.Transitions>
        </Button>

        <!-- cart button-->
        <Button x:ConnectionId='5' Name="cartButton"
                Grid.Column="2" Grid.ColumnSpan="1"
                Canvas.ZIndex="2"
                HorizontalAlignment="Right"  VerticalAlignment="Center" 
                HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"
                Width="auto" Height="auto" MinHeight="0" MinWidth="0"
                BorderThickness="0"
                                        >
            <Image
                Source="Assets/Buttons/CartShadowed.png"
                Stretch="Uniform"
                HorizontalAlignment="Left"
                Height="70" Width="70">
            </Image>
        </Button>       

            
        <Button x:ConnectionId='6' Name="profileButton"
                Background="Transparent"
                Grid.Column="6" 
                Canvas.ZIndex="1"
                Width="auto"
                BorderThickness="0"
                MinWidth="0"
                HorizontalContentAlignment="Center"
                VerticalAlignment="Center"  
                                           >
            <!--<Grid HorizontalAlignment="Left"
                  Width="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>-->

                <Image Name="avatar"
                       Width="60"
                       Stretch="Uniform"
                   Grid.Column="0" Margin="0"
                   VerticalAlignment="Stretch" HorizontalAlignment="Center"
                   Source="{Binding image_url_75x75}"/>
                
                
            <!--</Grid>-->
        </Button>
        <TextBlock Name="usernameBlock"
                           Width="auto"
                           Grid.Column="1"
                           VerticalAlignment="Center" HorizontalAlignment="Left"
                           Foreground="SlateGray"
                           Text="{Binding login_name}" FontSize="24" Visibility="Collapsed"/>
        

        <Button x:ConnectionId='7' Name="loginButton"
                MinWidth="0"
                Canvas.ZIndex="5"
                Grid.Row="0"
                Grid.Column="4"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center" HorizontalAlignment="Stretch"
                VerticalContentAlignment="Center"
                                           
                
                                         >
            <TextBlock 
                Text="Login" VerticalAlignment="Center"
                Foreground="SlateGray" FontSize="24"/>
        </Button>

        <!-- Log In Enforcer.
                Make the user log in -->
        <Grid Name="loginEnforcer"
              Canvas.ZIndex="4"
            Grid.RowSpan="3" Grid.ColumnSpan="8">
            <Rectangle Fill="White" 
                       Opacity="0.8"/>
            <TextBlock 
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,100,0,0"
                FontSize="28"
                TextWrapping="WrapWholeWords"
                Foreground="Black"
                Text="Please Log In to Your Etsy Account." FontFamily="Global User Interface"/>
        </Grid>

        <!-- Search Box -->
        <TextBox x:ConnectionId='8' Name="searchBoxLandscape"
                 Background="Red"
                 HorizontalAlignment="Stretch"
                 FontSize="36"                                    
                 Grid.Row="1"
                 Grid.Column="2" Grid.ColumnSpan="4"
                 Canvas.ZIndex="3"
                 Visibility="Collapsed"/>
        <!-- hide the search line. might get rid of it-->
        <Rectangle Name="searchLine"
            Canvas.ZIndex="2" Grid.Column="2"
            VerticalAlignment="Bottom" HorizontalAlignment="Stretch"
            Fill="#FFE22C2C" Stroke="#FFEC0B0B" StrokeThickness="1"
            Height="0" 
            Margin="0,0,0,5" Visibility="Collapsed"/>


        <ListView x:ConnectionId='9'   x:Name="productList"    
                    Canvas.ZIndex="0"
                    Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="8"
                    VerticalAlignment="Stretch"                            
                    HorizontalAlignment="Center"                                        
                                                                   
                    CanDragItems="False"
                    SelectionMode="Single" 
                    IncrementalLoadingThreshold="5"
                    
                    Visibility="Collapsed">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid Name="wGrid2" MaximumRowsOrColumns="4" Orientation="Horizontal"
                              ItemWidth="350" ItemHeight="480"
                              HorizontalAlignment="Center"
                              >
                    </WrapGrid>

                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <myUserControl:ItemInListView_Phone Margin="5,0,5,5"/>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <ListView x:ConnectionId='10'   x:Name="browseListView" 
                    Canvas.ZIndex="0"
                    Grid.Row="1" Grid.RowSpan="2" 
                    Grid.Column="0" Grid.ColumnSpan="5"
                    VerticalAlignment="Stretch"                            
                    HorizontalAlignment="Center"                                        
                    CanDragItems="False"
                    SelectionMode="Single" 
                                                  
                                                                      >

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid x:ConnectionId='13' Name="wGrid2" MaximumRowsOrColumns="3" Orientation="Horizontal"
                              HorizontalAlignment="Stretch"
                                                    >
                    </WrapGrid>

                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <myUserControl:MainBrowseSegment_Phone Margin="0,0,0,5" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Stretch"
                                                           Width="500" 
                                                           Height="600"/>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>


        <!-- Advertise -->
        <StackPanel x:ConnectionId='11'
            Name="adsPanel"
            Canvas.ZIndex="5"
            Grid.Column="0"
            Grid.Row="2" Grid.ColumnSpan="5"
            Orientation="Horizontal"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
                                    >
            <!--<WindowsPhone81:AdMediatorControl Name="adBottom"
                                              HorizontalAlignment="Center"
                                              IsEnabled="True"
                                              
                                              Height="100"
                                              Width="640"/>-->
            <Button x:ConnectionId='12' Name="purchaseButton"
                    Width="auto"
                    Height="90"
                    BorderThickness="0"
                    Background="Red"
                                                
                    Visibility="Visible">
                <StackPanel>
                    <TextBlock 
                        HorizontalAlignment="Center"
                        FontSize="22"
                        Text="Remove"/>
                    <TextBlock
                        FontSize="22"
                        HorizontalAlignment="Center"
                        Text="Ads"/>
                </StackPanel>
            </Button>
            <UI:AdControl   Name="adBottom"
                            HorizontalAlignment="Center"
                            IsEnabled="True"
                            ApplicationId="28a47aa7-4211-44f8-94fb-2a242754ddd4"
                            AdUnitId="203999"
                            Height="100"
                            Width="640"/>
            
        </StackPanel>

    </Grid>
</Page>

